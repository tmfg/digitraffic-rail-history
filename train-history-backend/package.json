{
  "name": "train-history-frontend",
  "version": "1.0.0",
  "description": "TypeScript frontend for train history application",
  "private": true,
  "type": "module",
  "scripts": {
    "build-js": "rollup -c",
    "build-css": "node css-handling.mjs",
    "build": "npm run build-js && npm run build-css",
    "watch": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf src/main/resources/static/js/*.js src/main/resources/static/js/*.map"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.1.4",
    "rollup": "^4.52.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "htmx-ext-path-params": "^2.0.1",
    "htmx.org": "^2.0.7"
  }
}