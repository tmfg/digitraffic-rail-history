{
  "name": "train-history-frontend",
  "version": "1.0.0",
  "description": "TypeScript frontend for train history application",
  "private": true,
  "type": "module",
  "scripts": {
    "build-js": "rollup -c",
    "build-css": "node css-handling.mjs",
    "sass-task": "sass --no-source-map --load-path=node_modules src/sass/main.scss src/main/resources/static/history/css/main.css",
    "build": "npm run build-js && npm run build-css && npm run sass-task",
    "watch": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf src/main/resources/static/history/js/*.js src/main/resources/static/history/js/*.map",
    "e2e": "playwright test",
    "e2e-ui": "playwright test --ui",
    "install-playwright": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "1.58.2",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@rollup/plugin-typescript": "12.3.0",
    "@types/node": "25.2.3",
    "dotenv": "17.3.1",
    "rollup": "4.57.1",
    "sass": "1.97.3",
    "tslib": "2.8.1",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@fintraffic/fds-coreui-css": "0.1.3",
    "htmx-ext-path-params": "2.0.2",
    "htmx.org": "2.0.8",
    "lucide": "0.564.0",
    "mysql2": "3.17.1"
  }
}